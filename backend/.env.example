# BandVenueReview.ie Environment Configuration
# Copy this file to .env and update the values for your setup

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=your-secret-key-here

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-here

# Database Configuration
# For local development (SQLite)
DATABASE_URL=sqlite:///bandvenuereview.db

# For production (Supabase PostgreSQL)
# DATABASE_URL=postgresql://username:password@db.supabasehost.com:5432/postgres

# CORS Configuration
# For development
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# For production
# CORS_ORIGINS=https://yourdomain.netlify.app

# File Upload Configuration
UPLOAD_FOLDER=uploads

# Email Configuration (optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
